<div class='items-item'>
    <div class='items-item-main-inf'>
        <h2><%= item.Title %> <%= item.Type %></h2>
        <div class='items-images'>

            <!-- Item Info -->
            <div class='items-images-main'>
                <div class='items-images-main-conent'>
                       <span class='items-images-main-text'>Full Set Price</span>
                       <br>
                       <span class='items-images-main-price'>322p</span>
                   </div>
                <div class='items-images-main-helper'></div>
                <img src='<%= img %>items/<%= item.Type %>_<%= item.Title %>.png' alt='<%= item.Title %>'>
            </div>

            <!-- Item Components -->
            <div class='items-images-components'>
                <div class='items-images-components-part'>
 <% JSON.parse(JSON.stringify(item)).Components.forEach(function(itemdata) { %>

                            <!-- Component -->
                            <div class='item-images-components-wr'>
                                <div class='item-images-components-component'>
                                    <img src='<%= img %>generic/<%= itemdata.name %>.png' alt='<%= item.Title %> <%= itemdata.name %>'>
                                </div>
                                <div class='items-component-details'>
                                    <h3><%= itemdata.name %></h3>
                                    <h4><%= itemdata.avg %></h4>
                                    <span>(<%= itemdata.Comp_val_rt %>)</span>
                                </div>
                            </div>
                            <% }); %>




                </div>
            </div>
        </div>
        <a href='/<%= item.Type %>/<%= item.Title %>'>Go to Item Page</a>
    </div>
    <div class='items-item-stats'>
        <h2>Weekly Statistics</h2>
        <div class='items-images'>
            <div class='chart' id="<%= item.Title %>"></div>
        </div>
    </div>
</div>



<% if (item.Title, item.Components) { %>
    <script>
        var ItemName = <%- JSON.stringify(item.Title)%>;
        var series = [];
        var compData = <%- JSON.stringify(item.Components) %>;

        Highcharts.setOptions(options);

        var chartdata = {
            chart: {
